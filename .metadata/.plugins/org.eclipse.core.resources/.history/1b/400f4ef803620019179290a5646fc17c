package mpi;

public class mpi {
		public static void main(String [] args) throws Exception {
			MPI.Init(args);
			int rank = MPI.COMM_WORLD.Rank();
			int size = MPI.COMM_WORLD.Size();
			int root =0;
			int [] buff = new int[size];
			int [] out = new int[size];
			if(rank == root) {
				System.out.println("Root initializing buffer!");
				buff[0] =10;
				buff[1] =20;
				buff[2] =30;
				buff[3] =40;
				System.out.println("Buffere init done!");
			}
			MPI.COMM_WORLD.Scatter(buff, 0, 1, MPI.Init(args), out, 0, 1,MPI.Init(args),root);
		}
}
